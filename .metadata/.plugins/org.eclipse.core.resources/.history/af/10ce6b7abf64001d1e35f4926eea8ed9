#include "fsm_button.h"
int mode = MODE1;


void fsm_button_run(){
	display7SEGforMode(mode);
	if(isbutton1pressed() == 1 ){
		if(mode == MODE1){
			mode = MODE2;
		} else if (mode == MODE2){
			mode = MODE3;
		} else if(mode == MODE3){
			mode = MODE4;
		}

	}
}

