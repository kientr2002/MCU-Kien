#include "fsm_button.h"

void fsm_button_run(){
	display7SEGforMode(mode);
	if(isbutton1pressed() == 1){
		mode = MODE2;
	}
	if(isbutton2pressed() == 1){
		mode = MODE3;
	}
	if(isbutton3pressed() == 1){
		mode = MODE4;
	}
}

