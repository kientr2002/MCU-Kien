#include <fsm_automatic.h>


void fsm_button_run(){
	switch(status_mode){
	case MODE1:
		if(isbutton1pressed() == 1){
			status_mode = MODE2;
		}
		led_horizontal();
		led_vertical();
		break;
	case MODE2:
		if(isbutton1pressed() == 1){
			status_mode = MODE3;
		}
		break;
	case MODE3:
		if(isbutton1pressed() == 1){
			status_mode = MODE4;
		}
		break;
	case MODE4:
		if(isbutton1pressed() == 1){
			status_mode = MODE1;
		}
		break;
	default:
		break;
	}
}

