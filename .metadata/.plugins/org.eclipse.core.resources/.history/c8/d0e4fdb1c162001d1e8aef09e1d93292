#include "led.h"
int ledstate = 0;
void led_blinky(){
	  switch(ledstate){
	case 0:
		//TO DO
		if(timerLED_flag == 1){
			HAL_GPIO_WritePin(LED_RED_GPIO_Port, LED_RED_Pin, GPIO_PIN_SET);
			setTimerLED(1000);
			ledstate = 1;
		}

		break;
	case 1:
		//TO DO
		if(timerLED_flag == 1){
			HAL_GPIO_WritePin(LED_RED_GPIO_Port, LED_RED_Pin, GPIO_PIN_RESET);
			setTimerLED(1000);
			ledstate = 0;

		}

		break;
	default:
		//TO DO
		HAL_GPIO_WritePin(LED_RED_GPIO_Port, LED_RED_Pin, GPIO_PIN_SET);
		break;
	}
	  timerLED_flag = 1;
}
