#include "fsm_button.h"
int mode = MODE1;


void fsm_button_run(){
	display7SEGforMode(mode);
	switch(mode){
	case MODE1:
		if(isbutton1pressed() == 1){
			mode = MODE2;
		}
		break;
	case MODE2:
		if(isbutton1pressed() == 1){
			mode = MODE3;
		}
		break;
	case MODE3:
		if(isbutton1pressed() == 1){
			mode = MODE4;
		}
		break;
	case MODE4:
		if(isbutton1pressed() == 1){
			mode = MODE1;
			break;
		}
	default:
		break;
	}
}

