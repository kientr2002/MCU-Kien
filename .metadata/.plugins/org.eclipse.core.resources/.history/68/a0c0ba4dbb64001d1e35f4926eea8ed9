#include "fsm_button.h"

void fsm_button_run(){
	display7SEGforMode(mode_status);
	if(isbutton1pressed() == 1){
		mode_status = MODE2;
	}
	if(isbutton2pressed() == 1){
		mode_status = MODE3;
	}
	if(isbutton3pressed() == 1){
		mode_status = MODE4;
	}
}

